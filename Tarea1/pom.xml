<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>uy.fing.tprog</groupId>
    <artifactId>tpgr27-parent</artifactId>
    <version>1.0.0</version>
  </parent>

  <artifactId>servidor-central</artifactId>
  <packaging>jar</packaging>
  <name>servidor-central</name>

  <properties>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <!-- Código fuente “oficial” de Maven -->
    <sourceDirectory>${project.basedir}/src/main/java</sourceDirectory>
    <testSourceDirectory>${project.basedir}/src/test/java</testSourceDirectory>

    <plugins>
      <!-- Compilar SOLO lógica + excepciones (+ datatypes si tenés) -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>17</release>
          <includes>
            <include>ServidorCentral/logica/**/*.java</include>
            <include>ServidorCentral/excepciones/**/*.java</include>
            <!-- si tenés DTOs/datatypes, sumalos -->
            <include>ServidorCentral/datatypes/**/*.java</include>
          </includes>
        </configuration>
      </plugin>

      <!-- Empaquetar SOLO esas clases en el JAR -->
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <includes>
            <include>ServidorCentral/logica/**</include>
            <include>ServidorCentral/excepciones/**</include>
            <include>ServidorCentral/datatypes/**</include>
          </includes>
        </configuration>
      </plugin>

      <!-- (Opcional) No correr tests por ahora -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>